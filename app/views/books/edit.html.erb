<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
  <h2 class="error_message"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li class="error_detail"><%= message %></li>
    <% end %>
  </ul>
</div>
<%end %>

<%= form_with model: @book do |f| %>

  <div class="field">
    <label>Title</label>
      <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
      <%= f.text_area :body %>
  </div>

  <div class="action">
    <%=f.submit 'Update Book'%>
  </div>

  <span>
    <%= link_to "Show", book_path(@book.id)%>
    |
    <%= link_to "Back", '/books' %>
  </span>
<% end %>